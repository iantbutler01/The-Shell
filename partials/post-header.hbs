<article class="introduction pt-4 pb-4 mt-16">
    <h1 class="ml-auto mr-auto blog-title">{{@site.title}}</h1>
    <h1 class="text-6xl sm:text-6xl md:text-8xl ml-auto p-4 mr-auto blog-description">{{post_title}}</h2>
    <div class="introduction-container">
        {{#if @site.logo}}
        <a id="blog-logo" class="p-8" href="{{@site.url}}">
            <img src="{{@site.logo}}" alt="Blog Logo" class="introduction-container-img site-logo" />
        </a>
        {{/if}}
    </div>
    <div class="flex flex-row">
    <span class="post-meta"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format='DD MMM YYYY'}}</time> {{#if tags}}on {{tags separator=" | "}}{{/if}}</span>
    {{> "site-nav" right=true}}
    </div>
</article>